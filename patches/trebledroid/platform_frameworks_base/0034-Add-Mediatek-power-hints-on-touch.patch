+                                if("rotate".equals(SystemProperties.get("persist.sys.phh.touch_hint")))
+                                        hint = 35; // MTKPOWER_HINT_APP_ROTATE
+                                mOldMtkPerf.mtkPowerHint(hint, 1000);
